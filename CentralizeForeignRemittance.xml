<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners>
        <listener class-name="Resources.Listeners"/>
    </listeners>
    <test verbose="1" preserve-order="true" name="Retail Operations Inputter">
        <groups>
            <run>
                <include name="IBG_CfrInputter"/>
            </run>
        </groups>

        <classes>
            <class name="Test.Scripts.Conventional.CentralizedRemittanceProcessing.CentralizeForeignRemittance">
                <methods>
                    <include name="CentralizeForeignRemittance"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="1" preserve-order="true" name="Retail Operations Authorizer">
        <groups>
            <run>
                <include name="IBG_CfrAuthorizer"/>
            </run>
        </groups>

        <classes>
            <class name="Test.Scripts.Conventional.CentralizedRemittanceProcessing.CentralizeForeignRemittance">
                <methods>
                    <include name="CentralizeForeignRemittance_Authorization"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="1" preserve-order="true" name="Retail Operations Inputter1">
        <groups>
            <run>
                <include name="IBG_CfrInputter"/>
            </run>
        </groups>

        <classes>
            <class name="Test.Scripts.Conventional.CentralizedRemittanceProcessing.CentralizeForeignRemittance">
                <methods>
                    <include name="CentralizeForeignRemittanceReversal"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="1" preserve-order="true" name="Retail Operations Authorizer1">
        <groups>
            <run>
                <include name="IBG_CfrAuthorizer"/>
            </run>
        </groups>

        <classes>
            <class name="Test.Scripts.Conventional.CentralizedRemittanceProcessing.CentralizeForeignRemittance">
                <methods>
                    <include name="CentralizeForeignRemittanceReversal_Authorization"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>